<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyMoney.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyMoney.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Dashboard" Icon="{StaticResource Dashboard}">
            <ShellContent
                Title="Dashboard"
                ContentTemplate="{DataTemplate views:DashboardPage}"
                Route="OnePage" /> 
        </Tab>
        <Tab Title="Movimentation" Icon="{StaticResource Movimentation}">
            <ShellContent
                Title="Movimentation"
                ContentTemplate="{DataTemplate views:MovimentationPage}"
                Route="TwoPage" />
        </Tab>
        <Tab Title="Budget" Icon="{StaticResource Budget}">
            <ShellContent
                Title="Budget"
                ContentTemplate="{DataTemplate views:BudgetPage}"
                Route="ThreePage" />
        </Tab>
    </TabBar>


</Shell>
