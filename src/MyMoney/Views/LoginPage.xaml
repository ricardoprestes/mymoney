<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyMoney.ViewModels"
             x:Class="MyMoney.Views.LoginPage"
             x:DataType="viewModels:LoginViewModel"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             
             Title="LoginPage">
    <StackLayout Spacing="20"
                 Padding="20">
        <Label Text="Enter with your e-mail" />
        <Entry Placeholder="youremail@sample.com"/>
        <Label Text="Enter with your password" />
        <Entry Placeholder="password"
               IsPassword="True"/>

        <Button Text="Entrar"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding IsNotBusy}" />
        <Button Text="Register"
                Command="{Binding NewAccountCommand}" />
    </StackLayout>
</ContentPage>

